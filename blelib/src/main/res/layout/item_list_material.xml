<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:paddingBottom="0dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/shadow_list"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/selector_card"
        android:padding="3dp">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bluetooth_128" />

        <TextView
            android:id="@+id/textViewDevName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:maxLines="3"
            android:paddingLeft="5dp"
            android:text="@string/pair_shadow"
            android:textColor="#222"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDevAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDevName"
            android:maxLines="3"
            android:paddingLeft="5dp"
            android:text="@string/pair_shadow_descr"
            android:textColor="#666"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>
