<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signup_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:paddingBottom="0dp"
    android:paddingTop="20dp"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_Signup_first_name"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorWhite"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtSignup_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:ems="10"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:drawablePadding="20dp"
            android:hint="@string/first_name"
            android:inputType="textPersonName"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
    android:id="@+id/input_layout_Signup_last_name"
    android:layout_width="match_parent"
    android:textColorHint="@color/colorWhite"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_below="@+id/input_layout_Signup_first_name"
    android:layout_height="50dp">
    <EditText
        android:id="@+id/edtSignup_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:ems="10"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="20dp"

        android:hint="@string/last_name"
        android:inputType="textPersonName"/>
 </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_Signup_mobile_no"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorWhite"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/input_layout_Signup_last_name"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtSignup_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:ems="10"
            android:hint="@string/mobile_number"
            android:inputType="phone"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_Date_of_birth"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorWhite"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/input_layout_Signup_mobile_no"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtDate_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:ems="10"
            android:hint="@string/date_of_birth"
            android:inputType="date|datetime"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_spnSecurity_provider"
        android:layout_width="wrap_content"
        android:textColorHint="@color/colorWhite"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/spnMedical_aid_provider"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spnSecurity_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/medical_aid_provider_arrays"
            android:textAlignment="viewStart"
            android:hint="Security provider"
            android:touchscreenBlocksFocus="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_Security_provider_contact_no"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorWhite"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/input_layout_spnSecurity_provider"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtSecurity_provider_contact_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:ems="10"
            android:hint="@string/security_provider_contact"
            android:inputType="phone"/>
    </android.support.design.widget.TextInputLayout>



    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spnMedical_aid_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/medical_aid_provider_prompt"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:layout_below="@+id/input_layout_Date_of_birth"
        app:met_floatingLabel="normal"/>




</RelativeLayout>
