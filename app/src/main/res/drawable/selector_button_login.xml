<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/color_login_button_push" />
            <gradient android:angle="180" android:endColor="@color/color_login_button_push" android:startColor="@color/color_login_button_push" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/color_actionbar_text" />
            <gradient android:angle="180" android:endColor="@color/color_actionbar_text" android:startColor="@color/color_actionbar_text" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
        </shape>
    </item>
</selector>

